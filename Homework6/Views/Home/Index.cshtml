@model Homework6.Models.SendMessage

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/styles.css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title>Birthday Card Generator</title>
</head>


@{
    Layout = null;
}

<!DOCTYPE html>



@using (Html.BeginForm())
{
    <h1 class="panel-heading text-left">Send A Birthday Card</h1>

    @Html.ValidationSummary()

    <p>
        <label>From:</label> @Html.TextBoxFor(t => t.From, new { @class = "form-control", maxlength = 30, style = "width:200px;" })
    </p>

    <p>
        <label>To:</label> @Html.TextBoxFor(t => t.To, new { @class = "form-control", maxlength = 30, style = "width:200px;" })
    </p>

    <p>
        <label>Message:</label> @Html.TextBoxFor(t => t.Message, new { @class = "form-control", maxlength = 30, style = "width:200px;" })
    </p>

    <input type="submit" class="btn btn-success" value="Send Card" />
}