@model HelloWorld.Models.GuestResponse

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/styles.css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title>RsvpForm</title>
</head>

@{
    Layout = null;
}

<!DOCTYPE html>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <h4 class="panel-heading text-center">RSVP</h4>

    <p>
        <label>Name:</label> @Html.TextBoxFor(t => t.Name,
new { @class = "form-control", maxlength = 30, style = "width:200px;" })
    </p>

    @*<p><input class="form-control" data-val="true"
        data-val-required="Name is required"
        id="Name" maxlength="30" name="Name"
        style="width:200px;" type="text" value="" /></p>*@

    <p>
        <label>Email:</label> @Html.TextBoxFor(t => t.Email,
new { @class = "form-control", maxlength = 30, style = "width:200px;" })
    </p>

    <p>
        <label>Phone:</label> @Html.TextBoxFor(t => t.Phone,
new { @class = "form-control", maxlength = 30, style = "width:200px;" })
    </p>

    <p>
        <label>Will Attend:</label>  @Html.DropDownListFor(t => t.WillAttend, new[]
{
new SelectListItem { Text="Yes, I'll be there", Value=bool.TrueString},
new SelectListItem{Text="No, I can't come", Value=bool.FalseString},
}, "Choose an option",
        new { @class = "form-control", style = "width:175px;" })
    </p>
    <input type="submit" class="btn btn-success" value="Submit RSVP" />
}
